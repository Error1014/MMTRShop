<Application x:Class="MMTRShopWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MMTRShopWPF"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TextInfo">
            <Setter Property="TextBlock.FontSize" Value="15"/>
            <Setter Property="TextBlock.Height" Value="30"/>
            <Setter Property="TextBlock.Width" Value="150"/>
        </Style>
        <Style x:Key="AutorizationStyle">
            <Setter Property="TextBlock.FontSize" Value="20"/>
            <Setter Property="TextBlock.Width" Value="200"/>
            <Setter Property="TextBlock.TextAlignment" Value="Right"/>
            <Setter Property="TextBox.FontSize" Value="20"/>
            <Setter Property="TextBox.Width" Value="300"/>
            <Setter Property="TextBox.TextAlignment" Value="Left"/>
        </Style>
        <Style x:Key="BankCardStyle">
            <Setter Property="TextBlock.FontSize" Value="18"/>
            <Setter Property="TextBox.FontSize" Value="18"/>
            <Setter Property="ComboBox.FontSize" Value="18"/>
        </Style>
    </Application.Resources>
</Application>
